{
	"list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  
	"clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/12.0.1/clangd_12.0.1/bin/clangd",
  
	"suggest.noselect":false,
  "suggest.enablePreselect": true,
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
	"suggest.removeDuplicateItems": false,
	"suggest.acceptSuggestionOnCommitCharacter": true,
	"suggest.detailField": "preview",
	"suggest.maxCompleteItemCount": 24,
	"coc.preferences.bracketEnterImprove": true,
  "coc.preferences.enableMarkdown": true,
	"coc.source.gocode.filetypes":["go"],

	"java.home":"/Library/Java/JavaVirtualMachines/openjdk.jdk/Contents/Home",
	"java.configuration.runtimes": [
		{
			"name": "JavaSE-11",
			"path": "/Library/Java/JavaVirtualMachines/openjdk-11.jdk/Contents/Home",
			"default":false
		}
	],

	"git.command": "git",
	"git.remoteName": "origin",
  "git.enableGutters": true,
 	"git.addedSign.text": "+",
	"git.changedSign.text": "~",
	"git.changeRemovedSign.text": "-",
	"git.addedSign.hlGroup": "DiffAdd",
	"git.removedSign.hlGroup": "DiffDelete",
	"git.changeRemovedSign.hlGroup": "DiffChange",
	"git.changedDecorator": "",

  "coc.source.issues.filetypes":[
		"gitcommit", 
		"gina-commit"
	],
	
	"sql.database": "postgresql",

	"markdown-preview-enhanced.liveUpdate": true,
	"markdown-preview-enhanced.previewTheme": "github-dark.css",
	"markdown-preview-enhanced.singlePreview": true,
	"markdown-preview-enhanced.enableHTML5Embed": false,

	"markdownlint.onChange":true,
  "markdownlint.config":{
	  "default":true,
	  "line-length":false,
	  "no-multiple-blanks":false,
	  "header-increment":false,
		"no-emphasis-as-heading": false,
		"no-inline-html": false 
  },
	
	"explorer.width": 28,
	"explorer.icon.source": "builtin",
	"explorer.file.root.template": "[icon] [git] [hidden & 1][root]",
	"explorer.focus": true,
	"explorer.git.enable": true,
	"explorer.position": "floating",
	"explorer.floating.height": -30,
	"explorer.file.showHiddenFiles": false,
	"explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
	
	"yank.list.maxsize": 60,
	"yank.enableCompletion": true,
  "yank.highlight.duration": 400
}
